{
  "$schema": "http://json.schemastore.org/template",
  "author": "Egor Quenum",
  "classifications": ["Console"],
  "preferNameDirectory": true,
  "identity": "MightyConsole.Template",
  "name": "Mighty Console App",
  "shortName": "mighty-console",
  "sourceName": "MightyConsole.Template",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "symbols": {
    "add-appsettings": {
      "type": "parameter",
      "description": "Adds appsettings.json and appsettings.Development.json.",
      "datatype": "bool",
      "defaultValue": "true"
    },
    "add-sln": {
      "type": "parameter",
      "description": "Adds a solution.",
      "dataType": "bool",
      "defaultValue": "true"
    }
  },
  "sources": [
    {
      "modifiers": [
        {
          "condition": "(!add-appsettings)",
          "exclude": ["MightyConsole.Template/appsettings.json", "MightyConsole.Template/appsettings.Development.json"]
        },
        {
          "condition": "(!add-sln)",
          "exclude": ["MightyConsole.Template.sln"]
        }
      ]
    }
  ]
}
