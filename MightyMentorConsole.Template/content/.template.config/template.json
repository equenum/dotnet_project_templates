{
  "$schema": "http://json.schemastore.org/template",
  "author": "Egor Quenum",
  "classifications": ["Common", "Console"],
  "preferNameDirectory": true,
  "identity": "",
  "name": "",
  "shortName": "",
  "sourceName": "",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "symbols": {
    "add-appsettings": {
      "type": "parameter",
      "description": "Adds appsettings.json and appsettings.Development.json.",
      "datatype": "bool",
      "defaultValue": "true"
    },
    "add-sln": {
      "type": "parameter",
      "description": "Adds a solution.",
      "dataType": "bool",
      "defaultValue": "false"
    },
    "include-utils": {
      "type": "parameter",
      "description": "Includes template utility classes.",
      "dataType": "bool",
      "defaultValue": "true"
    }
  },
  "sources": [
    {
      "modifiers": [
        {
          "condition": "(!add-appsettings)",
          "exclude": [
            "MightyMentorConsole.Template/appsettings.json",
            "MightyMentorConsole.Template/appsettings.Development.json"
          ]
        },
        {
          "condition": "(!add-sln)",
          "exclude": ["MightyMentorConsole.Template.sln"]
        },
        {
          "condition": "(!include-utils)",
          "exclude": ["MightyMentorConsole.Template/Utilities/*"]
        }
      ]
    }
  ]
}
